{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "declarationDir": "./dist",
    "declarationMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2015",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "app/**/*",
    "*/index.d.ts",
    "*/index.js",
    "*.config.js"
  ],
  "exclude": [
    "/node_modules",
    "/dist"
  ]
}
